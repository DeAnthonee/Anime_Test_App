<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp"
    >
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/list_item_image_view"
        android:src="@color/design_default_color_primary"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Show Title"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/list_item_image_view"
        app:layout_constraintTop_toTopOf="@id/list_item_image_view"
        android:layout_marginStart="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/list_item_title"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rating"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/list_item_image_view"
        app:layout_constraintTop_toBottomOf="@id/list_item_title"
        android:layout_marginStart="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/list_item_rating"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Number of Episodes"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/list_item_image_view"
        app:layout_constraintTop_toBottomOf="@id/list_item_rating"
        android:layout_marginStart="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/list_item_number_of_episodes"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Score"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/list_item_image_view"
        app:layout_constraintTop_toBottomOf="@id/list_item_number_of_episodes"
        android:layout_marginStart="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/list_item_score"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/list_item_image_view"
        app:layout_constraintTop_toBottomOf="@id/list_item_score"
        android:layout_marginStart="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="3"
        android:ellipsize="end"
        android:id="@+id/list_item_description"/>
</androidx.constraintlayout.widget.ConstraintLayout>